{
    "name": "vectis-cli",
    "version": "1.0.0",
    "license": "Apache 2.0",
    "authors": [
        "bwty <whalelephant@users.noreply.github.com>",
        "giovanni-orciuolo <giovanni@orciuolo.it>",
        "j0nl1 <jonlitech@gmail.com>"
    ],
    "description": "CLI tool for Vectis smart contract wallet",
    "scripts": {
        "dev": "npm run upload && npm run test-deploy",
        "test": "npm run test-dao-config && npm run test-dao-funds && npm run test-proxy-factory",
        "test-dao-config": "jest config.dao.spec.ts --runInBand",
        "test-dao-funds": "jest funds.dao.spec.ts --runInBand",
        "test-proxy-factory": "jest .proxy.spec.ts --runInBand && jest .factory.spec.ts --runInBand",
        "upload": "ts-node scripts/upload.ts",
        "test-deploy": "ts-node scripts/test-deploy-dao.ts",
        "types:build": "tsc --project tsconfig.types.json",
        "types:generate": "ts-node scripts/types.ts && npm run prettier",
        "types:publish": "npm run --prefix ./types publish:prod",
        "types:version": "npm --prefix ./types version",
        "prettier": "prettier --write \"**/*.{js,ts}\"",
        "deploy:hub": "ts-node scripts/deploy-hub.ts",
        "deploy:remote": "ts-node scripts/deploy-remote.ts",
        "plugin:register": "ts-node scripts/add-plugin-to-reg.ts",
        "plugin:install": "ts-node scripts/create-wallet-w-plugin.ts"
    },
    "devDependencies": {
        "@confio/relayer": "^0.7.0",
        "@cosmjs/amino": "^0.29.5",
        "@cosmjs/cosmwasm-stargate": "^0.29.5",
        "@cosmjs/crypto": "^0.29.5",
        "@cosmjs/encoding": "^0.29.5",
        "@cosmjs/proto-signing": "^0.29.5",
        "@cosmjs/stargate": "^0.29.5",
        "@cosmjs/tendermint-rpc": "^0.29.5",
        "@cosmwasm/ts-codegen": "0.26.0",
        "@swc/core": "^1.3.41",
        "@swc/helpers": "^0.4.14",
        "@types/jest": "^27.5.2",
        "@types/node": "^17.0.38",
        "axios": "^0.27.2",
        "dotenv": "^16.0.1",
        "husky": ">=6",
        "jest": "^28.1.0",
        "lint-staged": ">=10",
        "osmojs": "^14.0.0-rc.0",
        "prettier": "^2.6.2",
        "regenerator-runtime": "^0.13.11",
        "sinon": "^14.0.1",
        "ts-jest": "^28.0.3",
        "ts-node": "^10.8.0",
        "typescript": "^4.4.4"
    },
    "lint-staged": {
        "*.{ts}": "./cli/node_modules/.bin/prettier --write"
    },
    "jest": {
        "testRegex": "\\.spec\\.ts$",
        "testTimeout": 600000,
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            ".ts": "ts-jest"
        },
        "verbose": true,
        "testEnvironment": "node",
        "globals": {
            "ts-jest": {
                "isolatedModules": true
            }
        }
    },
    "dependencies": {
        "@injectivelabs/networks": "^1.10.8",
        "@injectivelabs/sdk-ts": "^1.10.54",
        "@injectivelabs/ts-types": "^1.10.5",
        "long": "^5.2.1"
    }
}
