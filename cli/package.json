{
    "name": "vectis-cli",
    "version": "1.0.0",
    "license": "Apache 2.0",
    "description": "CLI tool for Vectis smart contract wallet",
    "workspaces": [
        "types",
        "tests",
        "core"
    ],
    "scripts": {
        "deploy": "npm run deploy -w @vectis/core",
        "test": "npm run deploy && npm test -w @vectis/tests",
        "generate:types": "npm run generate -w @vectis/types",
        "prepare": "cd .. && ./cli/node_modules/.bin/husky install cli/.husky"
    },
    "devDependencies": {
        "@types/node": "^17.0.38",
        "husky": ">=6",
        "lint-staged": ">=10",
        "prettier": "^2.6.2",
        "typescript": "^4.4.4"
    },
    "lint-staged": {
        "*.{ts}": "./cli/node_modules/.bin/prettier --write"
    }
}
